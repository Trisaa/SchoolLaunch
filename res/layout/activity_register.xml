<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    >
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:fillViewport="true"
	     >
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="16dp"
		    android:paddingRight="16dp"
		    >
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_above="@+id/activity_register_user_name"
		        >
		
		        <ImageView
		            android:layout_width="96dp"
		            android:layout_height="96dp"
		            android:background="@drawable/ic_launcher"
		            android:layout_centerInParent="true"
		            />
		
		        </RelativeLayout>
		
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_centerInParent="true"
		        android:id="@+id/activity_register_middle_line"
		        />
		
		    <EditText
		        android:layout_width="match_parent"
		        android:layout_height="48dp"
		        android:gravity="center_vertical"
		        android:hint="用户名"
		        android:id="@+id/activity_register_user_name"
		        android:layout_above="@+id/activity_register_password"
		        />
		
		    <EditText
		        android:layout_width="match_parent"
		        android:layout_height="48dp"
		        android:gravity="center_vertical"
		        android:hint="密码"
		        android:id="@+id/activity_register_password"
		        android:layout_above="@+id/activity_register_middle_line"
		        android:inputType="textPassword"
		        />
		
		    <EditText
		        android:id="@+id/activity_register_btn_repeat"
		        android:layout_width="match_parent"
		        android:layout_height="48dp"
		        android:hint="确认密码"
		        android:layout_below="@+id/activity_register_middle_line"
		        android:inputType="textPassword"
		        />
		
		   
		</RelativeLayout>
	</ScrollView>
	 <View
        android:id="@+id/regis_button_div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:text="注册"
        android:textColor="#000000"
        android:textSize="24sp"
        android:id="@+id/activity_register_button_register"
        />
	
</LinearLayout>